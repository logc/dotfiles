[core]
	excludesfile = ~/.gitignore_global
[user]
	name = Luis Osa
	email = logc@spotify.com
[color]
	ui = true
[alias]
	amend = commit --amend
	discard = checkout --
	docommit = commit --verbose --all
	hist = log --color --pretty=format:\"%C(yellow)%h%C(reset) %s%C(bold red)%d%C(reset) %C(green)%ad%C(reset) %C(blue)[%an]%C(reset)\" --relative-date --decorate
	lastedit = log --pretty=format: --name-only -n 1
	logcommits  = log -n 10 --oneline
	logshort = log --oneline -n 10
	mkbranch = checkout -b
	rmbranch = branch -d
        recap = log --all --oneline --no-merges --author=logc@spotify.com
        today = log --since=00:00:00 --all --no-merges --oneline --author=logc@spotify.com

[push]
	default = current
[hub]
	host = pdihub.hi.inet
